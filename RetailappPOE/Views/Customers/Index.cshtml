@model IEnumerable<RetailappPOE.Models.Customers>

@{
    ViewData["Title"] = "Customers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-light fw-bold">Customers</h2>
    <a asp-action="Create" class="btn btn-lg btn-warning fw-bold shadow rounded-pill px-4">
        + Add Customer
    </a>
</div>

<!-- ===================== ALERT MESSAGES ===================== -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center fw-bold shadow-sm">
        @TempData["Success"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger text-center fw-bold shadow-sm">
        @TempData["Error"]
    </div>
}

<!-- ===================== CUSTOMERS TABLE ===================== -->
<div class="table-responsive">
    <table class="table table-dark table-hover table-bordered align-middle shadow-sm">
        <thead class="table-light">
            <tr class="text-center">
                <th>Name</th>
                <th>Email</th>
                <th>Customer ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var c in Model)
                {
                    <tr class="text-center">
                        <td>@($"{c.FirstName} {c.LastName}".Trim())</td>
                        <td>@c.Email</td>
                        <td class="text-monospace">@c.RowKey</td>
                        <td>
                            <!-- DELETE BUTTON FORM -->
                            <form asp-action="Delete" method="post" style="display:inline;"
                                  onsubmit="return confirm('Are you sure you want to delete this customer?');">
                                <input type="hidden" name="partitionKey" value="@c.PartitionKey" />
                                <input type="hidden" name="rowKey" value="@c.RowKey" />
                                <button type="submit" class="btn btn-sm btn-danger rounded-pill px-3 shadow">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted py-4">
                        No customers found.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- ===================== SCRIPTS ===================== -->
@section Scripts {
    <script>
        // Fade out alerts after 3 seconds
        setTimeout(function () {
            $(".alert").fadeOut("slow");
        }, 3000);
    </script>
}
