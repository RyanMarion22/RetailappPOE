@model IEnumerable<RetailappPOE.Models.Customers>

@{
    ViewData["Title"] = "Customers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-light fw-bold">Customers</h2>
    <a asp-action="Create" class="btn btn-lg btn-warning fw-bold shadow rounded-pill px-4">
        + Add Customer
    </a>
</div>

<div class="table-responsive">
    <table class="table table-dark table-hover table-bordered align-middle shadow-sm">
        <thead class="table-light">
            <tr class="text-center">
                <th>Name</th>
                <th>Email</th>
                <th>CustomerId</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr class="text-center">
                    <td>@($"{c.FirstName} {c.LastName}".Trim())</td>
                    <td>@c.Email</td>
                    <td class="text-monospace">@c.RowKey</td>
                    <td>
                        <a asp-action="Delete" asp-route-partitionKey="@c.PartitionKey"
                           asp-route-rowKey="@c.RowKey"
                           class="btn btn-sm btn-danger rounded-pill px-3 shadow">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
