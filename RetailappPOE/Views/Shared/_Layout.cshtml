<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EliteBoots</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RetailappPOE.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>
<body class="bg-dark text-white d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-white" asp-controller="Home" asp-action="Index">EliteBoots</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Customers" asp-action="Index">Customers</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Product" asp-action="Index">Products</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Orders" asp-action="Index">Orders</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Files" asp-action="Index">Files</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Account" asp-action="Register">Register</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Cart" asp-action="Index">Cart</a></li>
                    </ul>
                    <div class="d-flex">
                        <a class="btn btn-warning fw-bold text-dark" asp-controller="Product" asp-action="Index">Shop Boots</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">@RenderBody()</main>
    </div>
    <footer class="border-top bg-dark text-center mt-auto">
        <div class="container py-2">
            <small class="text-white">© @DateTime.Now.Year - EliteBoots · <span class="fw-bold" style="color: gold;">Premium Soccer Boots</span></small>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
