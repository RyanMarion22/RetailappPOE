@model IEnumerable<RetailappPOE.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-light fw-bold">Products</h2>
    <a asp-action="Create" class="btn btn-lg btn-success fw-bold shadow rounded-pill px-4"> + Add Product </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center fw-bold shadow-sm">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger text-center fw-bold shadow-sm">@TempData["Error"]</div>
}

<div class="table-responsive">
    <table class="table table-dark table-hover table-bordered align-middle shadow-sm">
        <thead class="table-light">
            <tr class="text-center">
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var p in Model)
                {
                    var productId = p.RowKey.Split('-').LastOrDefault();
                    int sqlId = int.TryParse(productId, out var id) ? id : 0;

                    <tr class="text-center">
                        <td class="fw-bold">@p.Name</td>
                        <td>@p.Description</td>
                        <td>R @p.Price</td>
                        <td>
                            @if (!string.IsNullOrEmpty(p.ImageUrl))
                            {
                                <img src="@p.ImageUrl" width="140" height="140" class="img-thumbnail rounded shadow-sm border border-light" />
                            }
                        </td>
                        <td>
                            <!-- Disabled Add to Cart Button -->
                            <button type="button" class="btn btn-sm btn-success rounded-pill px-3 shadow" disabled> Add to Cart </button>
                            <form asp-action="Delete" method="post" style="display:inline" onsubmit="return confirm('Delete this product?');">
                                <input type="hidden" name="partitionKey" value="@p.PartitionKey" />
                                <input type="hidden" name="rowKey" value="@p.RowKey" />
                                <input type="hidden" name="imageUrl" value="@p.ImageUrl" />
                                <button type="submit" class="btn btn-sm btn-danger rounded-pill px-3 shadow"> Delete </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-4">No products found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>setTimeout(() => $(".alert").fadeOut("slow"), 3000);</script>
}
