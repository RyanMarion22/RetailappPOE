@model IEnumerable<RetailappPOE.Models.SQLModels.CartItem>

<style>
    .cart-container {
        max-width: 900px;
        margin: 20px auto;
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        border: 1px solid #ddd;
    }

    h2 {
        margin-bottom: 20px;
        font-weight: 600;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        table thead tr {
            background: #f5f5f5;
        }

    th, td {
        padding: 12px 10px;
        border-bottom: 1px solid #ddd;
        text-align: left;
    }

    th {
        font-weight: 600;
    }

    tfoot tr th {
        font-size: 1.1rem;
        padding-top: 15px;
    }

    .empty-cart {
        padding: 40px;
        text-align: center;
        background: #f8f8f8;
        border-radius: 8px;
        border: 1px solid #ddd;
    }

    .checkout-btn {
        background: #0078ff;
        color: white;
        padding: 12px 18px;
        border: none;
        border-radius: 6px;
        font-size: 1rem;
        cursor: pointer;
    }

        .checkout-btn:hover {
            background: #005fcc;
        }

    .shop-link {
        color: #0078ff;
        font-weight: 600;
    }
</style>

<div class="cart-container">
    <h2>Your Cart</h2>

    @if (!Model.Any())
    {
        <div class="empty-cart">
            Your cart is empty.
            <a class="shop-link" asp-controller="ProductSQL" asp-action="Index">Shop now</a>
        </div>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th style="width:40%;">Product</th>
                    <th style="width:15%;">Quantity</th>
                    <th style="width:15%;">Price</th>
                    <th style="width:20%;">Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var itemTotal = item.Product != null ? item.Quantity * item.Product.Price : 0m;
                    <tr>
                        <td>@item.Product?.Name</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Product?.Price.ToString("C") ?? "—")</td>
                        <td>@itemTotal.ToString("C")</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3" style="text-align:right;">Grand Total:</th>
                    <th>@((ViewBag.Total as decimal?)?.ToString("C") ?? "R0.00")</th>
                </tr>
            </tfoot>
        </table>

        <form asp-action="Checkout" method="post">
            <input type="hidden" name="orderId" value="@ViewBag.OrderId" />
            <button class="checkout-btn" type="submit">Place Order</button>
        </form>
    }
</div>
