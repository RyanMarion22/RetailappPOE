@model RetailappPOE.Models.Orders

@{
    ViewData["Title"] = "Create Order";
}

<h2>Create Order</h2>

<!-- ERROR MESSAGES -->
@if (!ViewData.ModelState.IsValid)
{
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
}

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <!-- Customer dropdown -->
    <div class="form-group mb-3">
        <label asp-for="CustomerId" class="form-label">Customer</label>
        <select asp-for="CustomerId" asp-items="@(ViewData["Customers"] as SelectList)" class="form-select">
            <option value="">-- Select Customer --</option>
        </select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <!-- Product dropdown -->
    <div class="form-group mb-3">
        <label asp-for="ProductId" class="form-label">Product</label>
        <select asp-for="ProductId" asp-items="@(ViewData["Products"] as SelectList)" class="form-select">
            <option value="">-- Select Product --</option>
        </select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <!-- Quantity -->
    <div class="form-group mb-3">
        <label asp-for="Quantity" class="form-label">Quantity</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <!-- Hidden OrderDate (auto-set in controller) -->
    <input asp-for="OrderDate" type="hidden" />

    <button type="submit" class="btn btn-primary">Save Order</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}