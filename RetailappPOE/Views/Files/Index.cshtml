@model IEnumerable<RetailappPOE.Models.FilesModel>

@{
    ViewData["Title"] = "Files";
}

<h2>Files</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null || ViewBag.Error != null)
{
    <div class="alert alert-danger">@(TempData["Error"] ?? ViewBag.Error)</div>
}

<p>
    <a asp-action="Upload" class="btn btn-primary">Upload File</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Size</th>
            <th>Last Modified</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model)
        {
            <tr>
                <td>@file.Name</td>
                <td>@file.DisplaySize</td>
                <td>@file.LastModified</td>
                <td>
                    <a asp-action="Download" asp-route-fileName="@file.Name" class="btn btn-success btn-sm">Download</a>
                    <a asp-action="Delete" asp-route-fileName="@file.Name" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this file?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
