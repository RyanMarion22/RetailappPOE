@model IEnumerable<RetailappPOE.Models.FilesModel>

@{
    ViewData["Title"] = "Files";
}

<h2>Files</h2>

<!-- SUCCESS -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<!-- ERROR -->
@if (TempData["Error"] != null || ViewBag.Error != null)
{
    <div class="alert alert-danger">@(TempData["Error"] ?? ViewBag.Error)</div>
}

<p>
    <a asp-action="Upload" class="btn btn-primary">Upload File</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Size</th>
            <th>Last Modified</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var file in Model)
            {
                <tr>
                    <td>@file.Name</td>
                    <td>@file.DisplaySize</td>
                    <td>@file.LastModified?.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a asp-action="Download" asp-route-fileName="@file.Name" class="btn btn-success btn-sm">Download</a>
                        <form asp-action="Delete" asp-route-fileName="@file.Name" method="post" style="display:inline;"
                              onsubmit="return confirm('Delete @file.Name?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted py-3">No files uploaded yet.</td>
            </tr>
        }
    </tbody>
</table>